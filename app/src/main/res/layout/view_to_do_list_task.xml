<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/taskLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal"
        android:background="@drawable/transition_layout_list_item">

        <ImageView
            android:id="@+id/checkbox"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_radio_button_unchecked_gray"/>

        <ImageView
            android:id="@+id/bulletpoint"
            android:padding="@dimen/_19sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_circle_filled_gray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rewardTaskText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="@string/rewardLabel"
                android:textColor="@color/colorLightGray"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/routineStepText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:text="1. "
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/taskText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:text="Task"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDetailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/dateIcon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_date_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/tomorrowString"
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/taskDetailsDivider1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text=" • "
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/noteIcon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_description_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/taskDetailsDivider2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text=" • "
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/rewardIcon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_card_giftcard_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/taskDetailsDivider3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text=" • "
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/linkIcon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_link_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/taskDetailsDivider4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text=" • "
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/listIcon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_list_white"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/listText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/untitledToDoListString"
                    android:textColor="@color/colorLightGray"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/detailsIcon"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_info_outline_gray"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/star"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_star_border_gray" />

    </LinearLayout>

</LinearLayout>