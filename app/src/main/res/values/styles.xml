<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <!--  BottomSheetDialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!--  DatePickerDialog Themes  -->

    <style name="DatePickerDialogColorTheme1" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme1</item>
    </style>

    <style name="DatePickerDialogColorTheme2" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme2</item>
    </style>

    <style name="DatePickerDialogColorTheme3" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme3</item>
    </style>

    <style name="DatePickerDialogColorTheme4" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme4</item>
    </style>

    <style name="DatePickerDialogColorTheme5" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme5</item>
    </style>

    <style name="DatePickerDialogColorTheme6" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/colorTheme6</item>
    </style>

</resources>
